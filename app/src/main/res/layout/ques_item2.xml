<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#00BCD4"

    app:cardCornerRadius="20dp"
    android:layout_margin="5dp"


    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:padding="15dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"

                android:layout_gravity="center_vertical"
                android:padding="10dp"
                app:cardCornerRadius="40dp"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:id="@+id/questionutem_image2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:scaleType="fitCenter"


                    android:src="@drawable/ic_baseline_person_24" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- for time -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#FFEB3B"
                android:id="@+id/time_fromquestion_item2"
                android:hint="time"
                android:textStyle="bold"

                android:layout_gravity="right"
                />

            <!-- name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#FFEB3B"

                android:paddingStart="5dp"
                android:id="@+id/name_fromquestion_item2"
                android:hint="name"
                android:paddingBottom="5dp"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#171616"
                android:paddingStart="5dp"
                android:id="@+id/ques_fromquestion_item2"
                android:hint="Your Question"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginRight="20dp"



                >

                <!-- for replyng -->
                <TextView
                    android:id="@+id/reply_ques2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFEB3B"
                    android:text="Reply"

                    android:padding="5dp"
                    android:textStyle="bold"



                    android:textSize="20sp"
                    android:clickable="true"/>



                <!-- for favourite button -->

                   <ImageButton

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_baseline_star_border_24"
                       android:id="@+id/fav_residential"
                       android:padding="5dp"
                       android:layout_gravity="bottom"



                       android:paddingLeft="10dp"
                       android:background="#3400BCD4"
                       />




            </LinearLayout>






        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>