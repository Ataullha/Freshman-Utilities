<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#FF9800"
    app:cardCornerRadius="25dp"
    android:layout_margin="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="15dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"

                android:layout_gravity="center_vertical"
                android:padding="10dp"
                app:cardCornerRadius="40dp"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:id="@+id/favquesitem_image4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:scaleType="fitCenter"


                    android:src="@drawable/ic_baseline_person_24" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- for time -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#F8F6F6"
                android:id="@+id/time_fromfav_ques4"
                android:hint="time"
                android:textStyle="bold"

                android:layout_gravity="right"
                />

            <!-- name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#F6F1F1"
                android:paddingStart="5dp"
                android:id="@+id/name_fromfavques_item4"
                android:hint="name"
                android:paddingBottom="5dp"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#F8F1F1"
                android:paddingStart="5dp"
                android:id="@+id/ques_fromfav_ques_item4"
                android:hint="Your Question"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|right"
                android:layout_marginRight="20dp"



                >

                <!-- for replyng -->
                <TextView
                    android:id="@+id/reply_fav_ques4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F5F4F6"
                    android:text="View Reply"
                    android:textStyle="bold"
                    android:padding="5dp"

                    android:textSize="20sp"
                    android:clickable="true"/>





            </LinearLayout>






        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>