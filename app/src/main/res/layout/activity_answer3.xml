<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/aa3"
    android:layout_margin="3dp"
    android:background="@drawable/answeraca"
    tools:context=".AnswerActivity3">



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center|bottom"
            android:orientation="vertical" >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp"
                android:hint="Write Answer Here"
                android:textColorHint="#1160FF"
                android:textColor="@color/black"
                android:id="@+id/answer_er_edittext3"
                android:background="@drawable/custom_input_ques"
                android:layout_margin="5dp"
                />


            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Submit Answer3"

                android:layout_margin="5dp"
                android:id="@+id/reply_submit3"
                android:layout_gravity="center"
                android:background="@drawable/custom_input"
                android:textColor="@color/white"
                android:textSize="15sp"


                />
        </LinearLayout>
    </LinearLayout>


