<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="5sp"
        app:cardCornerRadius="4sp"
        android:id="@+id/cv_logout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:drawableStart="@drawable/ic_baseline_power_settings_new_24"
            android:paddingStart="10dp"
            android:padding="5dp"

            android:drawablePadding="10sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="5sp"
        app:cardCornerRadius="4sp"
        android:id="@+id/cv_delete">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:drawableStart="@drawable/ic_baseline_delete_24"
            android:paddingStart="10dp"
            android:padding="5dp"
            android:drawablePadding="10sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="5sp"
        app:cardCornerRadius="4sp"
        android:id="@+id/cv_share">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:drawableStart="@drawable/ic_baseline_share_24"
            android:paddingStart="10dp"
            android:padding="5dp"
            android:drawablePadding="10sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="5sp"
        app:cardCornerRadius="4sp"
        android:id="@+id/cv_report">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:drawableStart="@drawable/ic_baseline_report_problem_24"
            android:paddingStart="10dp"
            android:padding="5dp"
            android:drawablePadding="10sp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>